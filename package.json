{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.mjs",
    "test": "mocha user.test.mjs",
    "lint": "eslint .",
    "prepare": "cd ../ && husky install server/.husky",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.+(js|json|css|md)\""
  },
  "dependencies": {
    "chai": "^4.3.10",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "mocha": "^10.2.0",
    "mongodb": "^4.17.0",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "eslint --fix"
    ]
  }
}
